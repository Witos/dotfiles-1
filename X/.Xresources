! ----------------------------------------------------
! --> fonts
! ----------------------------------------------------
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! ---------------------------------------------------
! --> Rofi
! ---------------------------------------------------
rofi.opacity: 95
rofi.lines: 5
rofi.terminal: xfce4-terminal
rofi.font: Fira Mono Medium 14
rofi.padding: 500
rofi.bw: 0
rofi.width: 100
!rofi.levenshtein-sort: false

! ----------------------------------------------------
! --> Urxvt terminal
! ----------------------------------------------------
URxvt*geometry: 100x28
URxvt*font: xft:Droid Sans Mono:pixelsize=10:antialias=true:hinting=true
URxvt*boldFont: xft:Droid Sans Mono:bold:pixelsize=10:antialias=true:hinting=true
URxvt*borderless: 1
URxvt*scrollBar: false
URxvt*saveLines: 2000
!URxvt.transparent: true
!URxvt*.shading: 30
urxvt*depth: 32
urxvt*background: rgba:0000/0000/0200/c800

!! perl extensions
URxvt.perl-ext-common: default,url-select,clipboard,matcher,keyboard-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.underlineURLs: true
URxvt.url-launcher: /usr/bin/firefox
URxvt.url-select.autocopy: true
URxvt.url-select.button: 2
URxvt.url-select.underline: true

URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C: perl:clipboard:copy

